class LogLineParser
    def initialize(line)
      @line = line
      @reformat
    end
  
    def message
      @line.slice(@line.index(' ')+1 , @line.size).strip
    end
  
    def log_level
      @line.slice(@line.index('[')+1, @line.index(']')-1).downcase
    end
  
    def reformat
      @reformat = message + " " + "(" + log_level + ")"
    end
  end
  