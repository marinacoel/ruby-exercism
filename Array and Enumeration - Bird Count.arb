class BirdCount

    @@bird_last_week = [0, 2, 5, 3, 7, 8, 4]
    
    def self.last_week
      @@bird_last_week
    end
  
    def initialize(birds_per_day)
      @birds_per_day = birds_per_day
    end
  
    def yesterday
      @birds_per_day[-2]
    end
  
    def total
      @birds_per_day.sum
    end
  
    def busy_days
      count = 0
      @birds_per_day.each do |birds|
        if birds >= 5
          count += 1
        end
      end
      return count    
    end
  
    def day_without_birds?
      @birds_per_day.each do |birds|
        if birds == 0
          return true
        end
      end
      return false
    
    end
  end  